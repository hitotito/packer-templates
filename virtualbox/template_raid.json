{
    "variables": {
        "core": "2",
        "memory": "2048",
        "disk_size": "104857600",
        "ssh_port": "22",
        "ssh_wait_timeout": "10000s",
        "iso_url": "http://mirrors.ocf.berkeley.edu/debian-cd/current/amd64/iso-cd/debian-9.4.0-amd64-netinst.iso",
        "iso_md5": "73bd8aaaeb843745ec939f6ae3906e48",
        "vm_name": "debian-9-stretch-raid"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<tab><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed_raid.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname={{.Name}} <wait>",
                "netcfg/get_domain=acalustra.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_size": "{{user `disk_size`}}",
            "hard_drive_interface": "sata",
            "sata_port_count": 2,
            "guest_os_type": "Debian_64",
            "http_directory": "http",
            "iso_checksum": "{{user `iso_md5`}}",
            "iso_checksum_type": "md5",
            "iso_url": "{{user `iso_url`}}",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": "{{user `ssh_port`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "{{user `core`}}" ],
                [ "createmedium", "--format", "vdi",
                                  "--filename", "output-virtualbox-iso/{{.Name}}-disk2.vdi",
                                  "--size", "{{user `disk_size`}}" ],
                [ "storageattach", "{{.Name}}",
                                   "--storagectl", "SATA Controller",
                                   "--port", "1",
                                   "--device", "0",
                                   "--type", "hdd",
                                   "--medium", "output-virtualbox-iso/{{.Name}}-disk2.vdi",
                                   "--hotpluggable", "on" ]
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "override": {
                "virtualbox": {
                    "output": "{{user `vm_name`}}.box"
                }
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
            "override": {
                "virtualbox-iso": {
                    "scripts": [
                        "../scripts/base.sh",
                        "../scripts/vagrant.sh",
                        "../scripts/virtualbox.sh",
                        "../scripts/dev.sh",
                        "../scripts/cleanup.sh",
                        "../scripts/zerodisk.sh"
                    ]
                }
            }
        }
    ]
}
